{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": [
        "front/package.json"
      ]
    }
  },
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "requireBranch": "main",
    "requireUpstream": true,
    "push": true,
    "addUntrackedFiles": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  }
}