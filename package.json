{
	"name": "monitoverse",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"release": {
		"branches": [
			{
				"name": "main"
			},
			{
				"name": "beta", "prerelease": true, "channel": "beta"
			},
			{
				"name": "dev/*", "channel": "dev"
			},
			{
				"name": "feature/*", "channel": "feature"
			},
			{
				"name": "hotfix/*", "channel": "hotfix"
			}
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/npm",
			"@semantic-release/github"
		]
	},
	"scripts": {
		"dev": "concurrently \"pnpm run start:frontend\" \"pnpm run start:backend\"",
		"start:frontend": "cd front && bun dev",
		"start:backend": "cd back && go run main.go"
	},
	"dependencies": {
		"concurrently": "^9.1.0"
	},
	"devDependencies": {
		"semantic-release": "^24.2.3"
	}
}
