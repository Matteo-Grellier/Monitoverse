{
  "name": "monitoverse",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "release": {
    "branches": [
      {
        "name": "main"
      },
      {
        "name": "beta",
        "prerelease": true,
        "channel": "beta"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "dev": "concurrently \"pnpm run start:frontend\" \"pnpm run start:backend\"",
    "start:frontend": "cd front && bun dev",
    "start:backend": "cd back && air",
    "format:front": "cd front && bun format",
    "lint:front": "cd front && bun lint",
    "lint:back": "cd back && golangci-lint run",
    "prepare": "husky"
  },
  "dependencies": {
    "concurrently": "^9.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.3"
  }
}
